<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recbound_login"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:elevation="2dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="Centre Name"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:id="@+id/textViewItemName"
            android:layout_margin="2dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:id="@+id/textViewOrders"
            android:text="Orders"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:id="@+id/textViewMaterialCost"
            android:text="Material Cost"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:id="@+id/textViewSale"
            android:text="Sale = 58739"/>

    </LinearLayout>

</LinearLayout>
