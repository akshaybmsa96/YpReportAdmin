<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:layout_margin="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_margin="2dp"
            android:paddingLeft="5dp"
            android:maxLines="1" />


        <TextView
            android:id="@+id/textViewCentreName"
            android:textSize="12sp"
            android:layout_below="@+id/textViewItemName"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="2dp"
            android:layout_height="wrap_content"
            android:text="Centre Name"
            android:gravity="left" />


        <TextView
            android:id="@+id/textViewQty"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:paddingRight="5dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content"
            android:text="Qty Used"
            android:gravity="left"
            android:layout_above="@+id/textViewCentreName"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textViewAmount"
            android:textSize="12sp"
            android:layout_below="@+id/textViewQty"
            android:layout_width="wrap_content"
            android:paddingRight="5dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:textColor="@color/amountColor"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:gravity="left" />




    </RelativeLayout>
</RelativeLayout>